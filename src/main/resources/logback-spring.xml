<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--
                Padrão de log que inclui o traceId do MDC apenas quando existe
                Se não houver traceId, o campo simplesmente não aparece
            -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} %X{traceId} %msg%n
            </pattern>
        </encoder>
    </appender>

